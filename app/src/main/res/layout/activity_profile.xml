<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/profile"
        />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя: Денис"
            android:textColor="@color/app_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Фамилия: Новиков"
            android:textColor="@color/app_text_color"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/user_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Доп. информация:\n\nСтудент ВШ ИТИС. 4 курс, группа 11-302"
        android:textColor="@color/app_text_color"
        android:layout_below="@+id/profile_icon"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

    <TextView
        android:id="@+id/change_user"
        style="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:text="Сменить пользователя" />
    <TextView
        android:id="@+id/add_experiment"
        android:layout_above="@+id/change_user"
        style="@style/ButtonStyle"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="14sp"
        android:text="Добавить эксперемент" />
        >

    </LinearLayout>


</RelativeLayout>